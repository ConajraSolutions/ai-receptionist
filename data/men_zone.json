{
  "tenant_id": "barber_shop",
  "name": "Men Zone Barber Shop",
  "vapi_cfg": {
    "name": "Men Zone Receptionist",
    "firstMessage": "Thanks for calling Men Zone Barber Shop! How can I help you today?",
    "transcriber":
    {
      "provider": "deepgram",
      "model": "flux-general-en"
    },
    "model":
    {
      "provider": "openai",
      "model": "gpt-4o",
      "messages": [
        {
          "role": "system",
          "content": "You are an AI receptionist for Men Zone Barber Shop. Help customers book appointments and check available time slots. We offer haircuts, beard trims, and hot towel shaves. Use the book_appointment function when a customer wants to schedule, and check_availability to see what times are open. Be professional and friendly. Keep replies under 30 words."
        }
      ],
      "temperature": 0.7,
      "tools": [
        {
          "type": "function",
          "async": false,
          "messages": [
            {
              "type": "request-start",
              "content": "Let me book that for you..."
            }
          ],
          "function": {
            "name": "book_appointment",
            "description": "Books an appointment for the customer. Call this when the customer wants to schedule a specific time.",
            "parameters": {
              "type": "object",
              "properties": {
                "customer_name": {
                  "type": "string",
                  "description": "The customer's name"
                },
                "phone_number": {
                  "type": "string",
                  "description": "The customer's phone number"
                },
                "time_slot": {
                  "type": "string",
                  "description": "Preferred appointment time in ISO format (e.g., 2026-02-14T14:00:00Z)"
                },
                "service_type": {
                  "type": "string",
                  "enum": ["haircut", "beard-trim", "shave"],
                  "description": "Type of service: haircut, beard-trim, or shave"
                }
              },
              "required": ["customer_name", "phone_number", "time_slot", "service_type"]
            }
          },
          "server": {
            "url": "https://unresentful-myrtice-unawares.ngrok-free.dev/vapi/webhook"
          }
        },
        {
          "type": "function",
          "async": false,
          "messages": [
            {
              "type": "request-start",
              "content": "Let me check our schedule..."
            }
          ],
          "function": {
            "name": "check_availability",
            "description": "Checks what time slots are available for a specific service on a specific date.",
            "parameters": {
              "type": "object",
              "properties": {
                "date": {
                  "type": "string",
                  "description": "The date to check availability for in YYYY-MM-DD format"
                },
                "service_type": {
                  "type": "string",
                  "enum": ["haircut", "beard-trim", "shave"],
                  "description": "Type of service: haircut, beard-trim, or shave"
                }
              },
              "required": ["date", "service_type"]
            }
          },
          "server": {
            "url": "https://unresentful-myrtice-unawares.ngrok-free.dev/vapi/webhook"
          }
        }
      ]
    },
    "voice":
    {
      "provider": "11labs",
      "voiceId": "burt"
    },
    "clientMessages":
    [
      "conversation-update",
      "function-call",
      "hang",
      "metadata",
      "speech-update",
      "status-update",
      "transcript",
      "tool-calls"
    ],
    "serverMessages":
    [
      "end-of-call-report",
      "function-call",
      "hang",
      "speech-update",
      "status-update",
      "tool-calls"
    ],
    "maxDurationSeconds": 600,
    "backgroundSound": "off"
  },
  "calendar_credentials": {}
}
